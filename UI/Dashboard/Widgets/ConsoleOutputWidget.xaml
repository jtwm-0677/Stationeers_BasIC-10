<local:WidgetBase x:Class="BasicToMips.UI.Dashboard.Widgets.ConsoleOutputWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BasicToMips.UI.Dashboard"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#252526" Padding="6" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Clear button -->
                <Button x:Name="ClearButton"
                        Grid.Column="0"
                        Content="Clear"
                        Background="#3F3F46"
                        Foreground="White"
                        BorderThickness="1"
                        BorderBrush="#4A4A4A"
                        Padding="12,4"
                        Margin="0,0,6,0"
                        FontSize="12"
                        Cursor="Hand"
                        Click="ClearButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2D2D2D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Copy All button -->
                <Button x:Name="CopyAllButton"
                        Grid.Column="1"
                        Content="Copy All"
                        Background="#3F3F46"
                        Foreground="White"
                        BorderThickness="1"
                        BorderBrush="#4A4A4A"
                        Padding="12,4"
                        Margin="0,0,6,0"
                        FontSize="12"
                        Cursor="Hand"
                        Click="CopyAllButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2D2D2D"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Auto-scroll toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox x:Name="TimestampCheckBox"
                              Content="Timestamps"
                              IsChecked="True"
                              Foreground="White"
                              FontSize="12"
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"
                              Checked="TimestampCheckBox_Changed"
                              Unchecked="TimestampCheckBox_Changed"/>
                    <CheckBox x:Name="AutoScrollCheckBox"
                              Content="Auto-scroll"
                              IsChecked="True"
                              Foreground="White"
                              FontSize="12"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Console output -->
        <ScrollViewer x:Name="ConsoleScroller"
                      Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      Background="#1E1E1E"
                      Padding="8">
            <TextBlock x:Name="ConsoleTextBlock"
                       FontFamily="Consolas, Cascadia Code, Courier New"
                       FontSize="12"
                       Foreground="White"
                       TextWrapping="NoWrap"/>
        </ScrollViewer>

        <!-- Empty state message -->
        <TextBlock x:Name="EmptyMessage"
                   Grid.Row="1"
                   Text="No console output yet"
                   Foreground="#858585"
                   FontSize="13"
                   FontStyle="Italic"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Visible"/>
    </Grid>
</local:WidgetBase>
