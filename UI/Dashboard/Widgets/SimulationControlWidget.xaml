<local:WidgetBase x:Class="BasicToMips.UI.Dashboard.Widgets.SimulationControlWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BasicToMips.UI.Dashboard"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid x:Name="MainGrid" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
            <Button x:Name="PlayPauseButton" Width="80" Height="32" Margin="0,0,6,0" Click="PlayPauseButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="PlayPauseIcon" Text="▶" FontSize="14" Margin="0,0,4,0"/>
                    <TextBlock x:Name="PlayPauseText" Text="Run" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="StepButton" Width="80" Height="32" Margin="0,0,6,0" Click="StepButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏯" FontSize="14" Margin="0,0,4,0"/>
                    <TextBlock Text="Step" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button x:Name="ResetButton" Width="80" Height="32" Click="ResetButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⏹" FontSize="14" Margin="0,0,4,0"/>
                    <TextBlock Text="Reset" FontSize="12"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Speed Control -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Speed" FontSize="11" Foreground="#B0B0B0" Margin="0,0,0,4"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Slow" FontSize="10" Foreground="#808080" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider x:Name="SpeedSlider" Grid.Column="1"
                        Minimum="0" Maximum="2000" Value="100"
                        TickFrequency="100" IsSnapToTickEnabled="True"
                        VerticalAlignment="Center"
                        ValueChanged="SpeedSlider_ValueChanged"/>
                <TextBlock Grid.Column="2" Text="Fast" FontSize="10" Foreground="#808080" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </Grid>
        </Grid>

        <!-- Status Display -->
        <Border Grid.Row="2" Background="#1E1E1E" BorderBrush="#4A4A4A" BorderThickness="1"
                CornerRadius="3" Padding="10,8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Status:" FontSize="11" Foreground="#B0B0B0" Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText" Grid.Column="1" Text="Stopped" FontSize="11"
                           Foreground="#4EC9B0" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- Current Line Display -->
        <Border Grid.Row="3" Background="#1E1E1E" BorderBrush="#4A4A4A" BorderThickness="1"
                CornerRadius="3" Padding="10,8" Margin="0,0,0,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Line:" FontSize="11" Foreground="#B0B0B0" Margin="0,0,8,0"/>
                <TextBlock x:Name="CurrentLineText" Grid.Column="1" Text="-" FontSize="11"
                           Foreground="White" FontFamily="Consolas, Cascadia Code, Courier New"/>
            </Grid>
        </Border>

        <!-- Stats Display -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Instruction Count -->
            <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#4A4A4A" BorderThickness="1"
                    CornerRadius="3" Padding="8,6" Margin="0,0,4,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Instructions" FontSize="9" Foreground="#808080"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="InstructionCountText" Grid.Row="1" Text="0" FontSize="16"
                               Foreground="#4A9EFF" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Breakpoint Count -->
            <Border Grid.Column="1" Background="#1E1E1E" BorderBrush="#4A4A4A" BorderThickness="1"
                    CornerRadius="3" Padding="8,6" Margin="4,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Breakpoints" FontSize="9" Foreground="#808080"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="BreakpointCountText" Grid.Row="1" Text="0" FontSize="16"
                               Foreground="#F14C4C" FontWeight="Bold" HorizontalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</local:WidgetBase>
