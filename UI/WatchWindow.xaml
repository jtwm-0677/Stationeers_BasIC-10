<Window x:Class="BasicToMips.UI.WatchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Watch Variables" Height="400" Width="350"
        MinHeight="250" MinWidth="280"
        WindowStartupLocation="Manual"
        Background="#1E1E1E"
        ShowInTaskbar="False"
        Topmost="False">

    <Window.Resources>
        <Style TargetType="Button" x:Key="WatchButton">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#333337" Padding="12,8">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE773;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#DCDCAA" VerticalAlignment="Center"/>
                <TextBlock Text=" Watch Variables" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#E0E0E0" Margin="4,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Add Watch Input -->
        <Border Grid.Row="1" Background="#252526" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="WatchExpressionInput"
                         Grid.Column="0"
                         Background="#3F3F46"
                         Foreground="#E0E0E0"
                         BorderThickness="0"
                         Padding="8,6"
                         FontSize="12"
                         ToolTip="Enter expression (e.g., r0, d0.Temperature, sp)"
                         KeyDown="WatchExpressionInput_KeyDown"/>
                <Button Grid.Column="1" Style="{StaticResource WatchButton}" Content="Add"
                        Click="AddWatch_Click" Margin="4,0,0,0" Padding="12,6"/>
            </Grid>
        </Border>

        <!-- Watch List -->
        <Border Grid.Row="2" Background="#252526" Padding="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="WatchListPanel">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8,4" BorderBrush="#3F3F46" BorderThickness="0,0,0,1" Background="#252526">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}" FontFamily="Consolas" FontSize="12"
                                                   Foreground="#4EC9B0" VerticalAlignment="Center"/>
                                        <TextBlock Text=" = " Foreground="#808080"
                                                   FontSize="12" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding Value}" FontFamily="Consolas" FontSize="12"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#E0E0E0"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding HasChanged}" Value="True">
                                                            <Setter Property="Foreground" Value="#DCDCAA"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" Text="{Binding Type}" FontSize="10"
                                               Foreground="#808080"
                                               VerticalAlignment="Center" Margin="8,0"/>
                                    <Button Grid.Column="2" Style="{StaticResource WatchButton}"
                                            Padding="4" ToolTip="Remove" Tag="{Binding}"
                                            Click="RemoveWatch_Click">
                                        <TextBlock Text="&#xE711;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#F14C4C"/>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Bottom Buttons -->
        <Border Grid.Row="3" Background="#2D2D30" Padding="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{StaticResource WatchButton}" Content="Clear All"
                        Click="ClearAllWatches_Click" Padding="12,6"/>
                <Button Style="{StaticResource WatchButton}" Content="Add Defaults"
                        Click="AddDefaultWatches_Click" Padding="12,6" Margin="4,0,0,0"/>
                <Button Style="{StaticResource WatchButton}" Content="Refresh"
                        Click="RefreshWatches_Click" Padding="12,6" Margin="4,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
