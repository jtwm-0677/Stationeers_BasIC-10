<Window x:Class="BasicToMips.UI.VariableInspectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Variable Inspector" Height="500" Width="400"
        MinHeight="300" MinWidth="300"
        WindowStartupLocation="Manual"
        Background="#1E1E1E"
        ShowInTaskbar="False"
        Topmost="False">

    <Window.Resources>
        <Style TargetType="Button" x:Key="InspectorButton">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGrid" x:Key="InspectorDataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D30"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#333337" Padding="12,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE8F4;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#4EC9B0" VerticalAlignment="Center"/>
                    <TextBlock Text=" BASIC Variables" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#E0E0E0" Margin="4,0,0,0"/>
                </StackPanel>
                <Button Grid.Column="1" Style="{StaticResource InspectorButton}" Content="Refresh" Click="Refresh_Click" Padding="12,4"/>
            </Grid>
        </Border>

        <!-- Variables Grid -->
        <DataGrid x:Name="VariablesGrid" Grid.Row="1"
                  Style="{StaticResource InspectorDataGrid}"
                  AutoGenerateColumns="False"
                  IsReadOnly="False"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CellEditEnding="VariablesGrid_CellEditEnding">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Variable" Binding="{Binding Name}" Width="100" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#4EC9B0"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Register" Binding="{Binding Register}" Width="60" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#808080"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat=F4}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#DCDCAA"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="#3F3F46"/>
                            <Setter Property="Foreground" Value="#DCDCAA"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Line" Binding="{Binding Line}" Width="50" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#569CD6"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Constants Section -->
        <Border Grid.Row="2" Background="#2D2D30" Padding="8" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
            <Expander Header="Constants (Read-only)" Foreground="#808080" IsExpanded="False">
                <DataGrid x:Name="ConstantsGrid"
                          Style="{StaticResource InspectorDataGrid}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          MaxHeight="150"
                          SelectionMode="Single"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#569CD6"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#B5CEA8"/>
                                    <Setter Property="FontFamily" Value="Consolas"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Expander>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#007ACC" Padding="8,4">
            <TextBlock x:Name="StatusText" Text="Ready - Edit values and they will be applied to the simulation" Foreground="White" FontSize="11"/>
        </Border>
    </Grid>
</Window>
