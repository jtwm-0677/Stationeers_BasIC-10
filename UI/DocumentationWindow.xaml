<Window x:Class="BasicToMips.UI.DocumentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documentation"
        Height="700" Width="900"
        MinHeight="400" MinWidth="500"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MainWindowStyle}"
        ShowInTaskbar="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryBackgroundBrush}" Padding="16,12">
            <TextBlock x:Name="TitleText" Text="Documentation" FontSize="18" FontWeight="SemiBold"/>
        </Border>

        <!-- Content - StackPanel for formatted content like sidebar -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel x:Name="ContentPanel">
                <!-- Content populated dynamically -->
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}" Padding="16,12">
            <Button Content="Close"
                    Style="{StaticResource ModernButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="Close_Click"
                    Width="100"/>
        </Border>
    </Grid>
</Window>
