<Window x:Class="BasicToMips.UI.DocumentationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Documentation"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Style="{StaticResource MainWindowStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryBackgroundBrush}" Padding="16,12">
            <TextBlock x:Name="TitleText" Text="Documentation" FontSize="18" FontWeight="SemiBold"/>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <TextBlock x:Name="ContentText"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource UIFont}"
                       FontSize="13"
                       LineHeight="22"/>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}" Padding="16,12">
            <Button Content="Close"
                    Style="{StaticResource ModernButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="Close_Click"
                    Width="100"/>
        </Border>
    </Grid>
</Window>
