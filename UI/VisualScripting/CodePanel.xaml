<UserControl x:Class="BasicToMips.UI.VisualScripting.CodePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             Background="{DynamicResource PrimaryBackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}"
                Padding="8,4" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Generated Code"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Foreground="White"
                               Margin="0,0,12,0"/>

                    <Button x:Name="CopyButton"
                            Style="{DynamicResource IconButtonStyle}"
                            ToolTip="Copy All Code"
                            Click="CopyButton_Click"
                            Margin="4,0">
                        <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" FontSize="14"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="ToggleViewButton"
                            Style="{DynamicResource IconButtonStyle}"
                            ToolTip="Toggle between BASIC and IC10 view"
                            Click="ToggleViewButton_Click"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE13C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Margin="0,0,4,0"/>
                            <TextBlock x:Name="ToggleViewText" Text="Show IC10" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Code Editor -->
        <Border Grid.Row="1" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="1">
            <avalonedit:TextEditor x:Name="CodeEditor"
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   ShowLineNumbers="True"
                                   IsReadOnly="True"
                                   WordWrap="False"
                                   VerticalScrollBarVisibility="Auto"
                                   HorizontalScrollBarVisibility="Auto"
                                   Background="#1E1E1E"
                                   Foreground="#D4D4D4"
                                   LineNumbersForeground="#858585"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource SecondaryBackgroundBrush}"
                Padding="8,4" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Error/Warning display -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" x:Name="ErrorPanel" Visibility="Collapsed">
                    <TextBlock Text="&#xE7BA;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="#F48771"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock x:Name="ErrorText"
                               Text="Compilation Error"
                               Foreground="#F48771"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Line count display -->
                <TextBlock Grid.Column="1"
                           x:Name="LineCountText"
                           Text="BASIC: 0 lines | IC10: 0/128"
                           Foreground="{DynamicResource SecondaryTextBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
