<UserControl x:Class="BasicToMips.UI.VisualScripting.Nodes.NodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="200"
             Focusable="True"
             FocusManager.IsFocusScope="False">

    <UserControl.Resources>
        <!-- Drop shadow effect for selection -->
        <DropShadowEffect x:Key="SelectionGlow"
                         Color="#4A9EFF"
                         BlurRadius="12"
                         ShadowDepth="0"
                         Opacity="0.8"/>
    </UserControl.Resources>

    <Grid>
        <!-- Main node container -->
        <Border x:Name="MainBorder"
                Background="#2D2D2D"
                BorderBrush="#3D3D3D"
                BorderThickness="1"
                CornerRadius="8">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="24"/> <!-- Header (shorter) -->
                    <RowDefinition Height="*"/>  <!-- Body -->
                </Grid.RowDefinitions>

                <!-- Header with category color - THIS IS THE DRAG HANDLE -->
                <Border x:Name="HeaderBorder"
                        Grid.Row="0"
                        Background="#4A9EFF"
                        CornerRadius="8,8,0,0"
                        Padding="6,2"
                        Cursor="SizeAll"
                        MouseDown="Header_MouseDown"
                        MouseMove="Header_MouseMove"
                        MouseUp="Header_MouseUp">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/> <!-- Icon -->
                            <ColumnDefinition Width="*"/>    <!-- Label -->
                        </Grid.ColumnDefinitions>

                        <!-- Icon (optional) -->
                        <TextBlock x:Name="IconText"
                                   Grid.Column="0"
                                   Foreground="Black"
                                   FontSize="12"
                                   FontFamily="Segoe UI Symbol"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"
                                   Visibility="Collapsed"/>

                        <!-- Node label -->
                        <TextBlock x:Name="LabelText"
                                   Grid.Column="1"
                                   Text="Node"
                                   Foreground="Black"
                                   FontSize="11"
                                   FontFamily="Segoe UI"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </Border>

                <!-- Body content -->
                <Grid Grid.Row="1" Margin="6,4,6,6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Input pins -->
                        <ColumnDefinition Width="*"/>    <!-- Center content -->
                        <ColumnDefinition Width="Auto"/> <!-- Output pins -->
                    </Grid.ColumnDefinitions>

                    <!-- Input pins container -->
                    <StackPanel x:Name="InputPinsPanel"
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                Margin="-6,4,4,0">
                        <!-- Pins will be added programmatically -->
                    </StackPanel>

                    <!-- Center content area (for parameters, text, etc.) -->
                    <!-- Using Border instead of ScrollViewer to avoid mouse event capture issues -->
                    <Border x:Name="BodyBorder"
                            Grid.Column="1"
                            Margin="2,2"
                            Background="Transparent">
                        <ContentPresenter x:Name="BodyContent"
                                          VerticalAlignment="Top"/>
                    </Border>

                    <!-- Output pins container -->
                    <StackPanel x:Name="OutputPinsPanel"
                                Grid.Column="2"
                                VerticalAlignment="Top"
                                Margin="4,4,-6,0">
                        <!-- Pins will be added programmatically -->
                    </StackPanel>
                </Grid>

                <!-- Resize grip -->
                <Thumb x:Name="ResizeGrip"
                       Grid.Row="1"
                       Width="12" Height="12"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Cursor="SizeNWSE"
                       DragDelta="ResizeGrip_DragDelta">
                    <Thumb.Template>
                        <ControlTemplate TargetType="Thumb">
                            <Grid Background="Transparent">
                                <Path Data="M 0,12 L 12,0 M 4,12 L 12,4 M 8,12 L 12,8"
                                      Stroke="#666666"
                                      StrokeThickness="1"/>
                            </Grid>
                        </ControlTemplate>
                    </Thumb.Template>
                </Thumb>
            </Grid>
        </Border>
    </Grid>
</UserControl>
