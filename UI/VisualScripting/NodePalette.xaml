<UserControl x:Class="BasicToMips.UI.VisualScripting.NodePalette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryBackgroundBrush}"
                Padding="8,6" BorderBrush="{DynamicResource SeparatorBrush}" BorderThickness="0,0,0,1">
            <TextBlock Text="Node Palette" FontWeight="SemiBold" Foreground="{DynamicResource PrimaryTextBrush}"/>
        </Border>

        <!-- Search Box -->
        <Border Grid.Row="1" Padding="8,6" Background="{DynamicResource TertiaryBackgroundBrush}">
            <TextBox x:Name="SearchBox"
                     Background="{DynamicResource EditorBackgroundBrush}"
                     Foreground="{DynamicResource PrimaryTextBrush}"
                     BorderBrush="{DynamicResource BorderBrush}"
                     Padding="6,4"
                     Text=""
                     TextChanged="SearchBox_TextChanged">
                <TextBox.Style>
                    <Style TargetType="TextBox">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                            <VisualBrush.Visual>
                                                <Label Content="Search nodes..." Foreground="Gray" Padding="6,0,0,0"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
        </Border>

        <!-- Categories and Nodes -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"
                      Background="{DynamicResource EditorBackgroundBrush}">
            <ItemsControl x:Name="CategoriesPanel">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander IsExpanded="True" Margin="0,0,0,2">
                            <Expander.Header>
                                <TextBlock Text="{Binding CategoryName}" FontWeight="SemiBold"
                                           Foreground="{DynamicResource AccentBrush}"/>
                            </Expander.Header>
                            <ItemsControl ItemsSource="{Binding Nodes}" Margin="8,4,0,4">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border x:Name="NodeItem"
                                                Background="{DynamicResource TertiaryBackgroundBrush}"
                                                BorderBrush="{DynamicResource BorderBrush}"
                                                BorderThickness="1"
                                                CornerRadius="4"
                                                Margin="0,2"
                                                Padding="8,6"
                                                Cursor="Hand"
                                                MouseLeftButtonDown="NodeItem_MouseLeftButtonDown"
                                                MouseEnter="NodeItem_MouseEnter"
                                                MouseLeave="NodeItem_MouseLeave">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Icon}" FontFamily="Segoe MDL2 Assets"
                                                           FontSize="14" VerticalAlignment="Center"
                                                           Foreground="{DynamicResource SecondaryTextBrush}"
                                                           Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding DisplayName}"
                                                           Foreground="{DynamicResource PrimaryTextBrush}"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
