<Window x:Class="BasicToMips.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MainWindowStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource TertiaryBackgroundBrush}" Padding="16,12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="20" VerticalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                <TextBlock Text=" Settings" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="8,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
            <StackPanel>
                <!-- General Settings -->
                <TextBlock Text="General" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,12"/>

                <CheckBox x:Name="AutoCompileCheck" Content="Auto-compile on save" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}"/>
                <CheckBox x:Name="ShowDocsCheck" Content="Show documentation panel by default" Margin="0,0,0,8" Foreground="{StaticResource PrimaryTextBrush}"/>
                <CheckBox x:Name="WordWrapCheck" Content="Enable word wrap in editors" Margin="0,0,0,16" Foreground="{StaticResource PrimaryTextBrush}"/>

                <!-- Editor Settings -->
                <TextBlock Text="Editor" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource AccentBrush}" Margin="0,8,0,12"/>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Font Size:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Slider x:Name="FontSizeSlider" Minimum="8" Maximum="32" Width="200" Value="14" VerticalAlignment="Center"/>
                        <TextBlock x:Name="FontSizeText" Text="14" Width="30" Margin="8,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Optimization Level:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="OptLevelCombo" Grid.Column="1" Width="200" HorizontalAlignment="Left">
                        <ComboBoxItem Content="None (Fastest compile)"/>
                        <ComboBoxItem Content="Basic (Recommended)" IsSelected="True"/>
                        <ComboBoxItem Content="Aggressive (Smallest output)"/>
                    </ComboBox>
                </Grid>

                <!-- Stationeers Settings -->
                <TextBlock Text="Stationeers Integration" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource AccentBrush}" Margin="0,8,0,12"/>

                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Game Directory:" VerticalAlignment="Center"/>
                    <TextBox x:Name="StationeersPathText"
                             Grid.Column="1"
                             Style="{StaticResource ModernTextBoxStyle}"
                             IsReadOnly="True"
                             Margin="0,0,8,0"/>
                    <Button Grid.Column="2"
                            Content="Browse..."
                            Style="{StaticResource ModernButtonStyle}"
                            Padding="12,6"
                            Click="BrowseStationeers_Click"/>
                </Grid>

                <TextBlock Text="IC10 scripts will be saved to the 'scripts' subfolder in this directory."
                           Foreground="{StaticResource SecondaryTextBrush}"
                           FontSize="11"
                           Margin="150,0,0,0"
                           TextWrapping="Wrap"/>

                <!-- About -->
                <TextBlock Text="About" FontWeight="SemiBold" FontSize="14" Foreground="{StaticResource AccentBrush}" Margin="0,24,0,12"/>

                <TextBlock Foreground="{StaticResource SecondaryTextBrush}" TextWrapping="Wrap">
                    <Run Text="BASIC to IC10 Compiler v1.0"/><LineBreak/>
                    <Run Text="A professional BASIC compiler for Stationeers"/><LineBreak/><LineBreak/>
                    <Run Text="Converts high-level BASIC code into optimized IC10 MIPS assembly for use in Stationeers IC chips."/>
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBackgroundBrush}" Padding="16,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Style="{StaticResource ModernButtonStyle}"
                        Width="100"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button Content="Save"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Width="100"
                        Click="Save_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
