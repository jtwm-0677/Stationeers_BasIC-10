<Window x:Class="BasicToMips.UI.SimulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalon="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="IC10 Simulator - Step-Through Debugger" Height="750" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        Closed="Window_Closed">

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RunCommand}"/>
        <KeyBinding Key="F10" Command="{Binding StepCommand}"/>
        <KeyBinding Key="F11" Command="{Binding StepIntoCommand}"/>
        <KeyBinding Key="F6" Command="{Binding StopCommand}"/>
    </Window.InputBindings>

    <Window.Resources>
        <Style TargetType="Button" x:Key="SimButton">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#2D2D30"/>
                                <Setter Property="Foreground" Value="#808080"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="RowBackground" Value="#252526"/>
            <Setter Property="AlternatingRowBackground" Value="#2D2D30"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="8" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RunButton" Style="{StaticResource SimButton}" Click="Run_Click" ToolTip="Run (F5)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE768;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#4EC9B0" VerticalAlignment="Center"/>
                        <TextBlock Text=" Run" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="PauseButton" Style="{StaticResource SimButton}" Click="Pause_Click" ToolTip="Pause">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE769;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#DCDCAA" VerticalAlignment="Center"/>
                        <TextBlock Text=" Pause" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="StopButton" Style="{StaticResource SimButton}" Click="Stop_Click" ToolTip="Stop (F6)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE71A;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#F14C4C" VerticalAlignment="Center"/>
                        <TextBlock Text=" Stop" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>

                <Rectangle Width="1" Fill="#3F3F46" Margin="8,2"/>

                <Button x:Name="StepButton" Style="{StaticResource SimButton}" Click="Step_Click" ToolTip="Step Over (F10)">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#569CD6" VerticalAlignment="Center"/>
                        <TextBlock Text=" Step" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ResetButton" Style="{StaticResource SimButton}" Click="Reset_Click" ToolTip="Reset">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#CE9178" VerticalAlignment="Center"/>
                        <TextBlock Text=" Reset" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>

                <Rectangle Width="1" Fill="#3F3F46" Margin="8,2"/>

                <Button x:Name="LoopButton" Style="{StaticResource SimButton}" Click="Loop_Click" ToolTip="Loop Mode - Continuous execution with YIELD pauses">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE1CD;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#C586C0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="LoopButtonText" Text=" Loop" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>

                <Rectangle Width="1" Fill="#3F3F46" Margin="8,2"/>

                <TextBlock Text="Tick Speed:" Foreground="#808080" VerticalAlignment="Center" Margin="8,0"/>
                <Slider x:Name="SpeedSlider" Width="100" Minimum="1" Maximum="100" Value="50"
                        VerticalAlignment="Center" Margin="4,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>

            <!-- Code Panel -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#333337" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE943;" FontFamily="Segoe MDL2 Assets" FontSize="14" Foreground="#569CD6" VerticalAlignment="Center"/>
                            <TextBlock Text=" IC10 Code" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#E0E0E0" Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <avalon:TextEditor x:Name="CodeEditor"
                                      Grid.Row="1"
                                      FontFamily="Consolas"
                                      FontSize="13"
                                      Background="#1E1E1E"
                                      Foreground="#E0E0E0"
                                      LineNumbersForeground="#858585"
                                      ShowLineNumbers="True"
                                      IsReadOnly="True"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto"
                                      Padding="4"/>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="4" Background="#2D2D30" Cursor="SizeWE"/>

            <!-- Debug Panels -->
            <Grid Grid.Column="2" Background="#252526">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                </Grid.RowDefinitions>

                <!-- Registers Panel -->
                <Border Grid.Row="0" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#333337" Padding="12,6">
                            <TextBlock Text="Registers" FontWeight="SemiBold" Foreground="#E0E0E0"/>
                        </Border>

                        <DataGrid x:Name="RegistersGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False"
                                  SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False"
                                  CellEditEnding="RegistersGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Register" Binding="{Binding Name}" Width="70" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Value" Binding="{Binding Value, StringFormat=F4}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="1" Height="4" Background="#2D2D30" HorizontalAlignment="Stretch" Cursor="SizeNS"/>

                <!-- Devices Panel -->
                <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#333337" Padding="12,6">
                            <TextBlock Text="Devices" FontWeight="SemiBold" Foreground="#E0E0E0"/>
                        </Border>

                        <DataGrid x:Name="DevicesGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="False"
                                  SelectionMode="Single" CanUserAddRows="False" CanUserDeleteRows="False"
                                  CellEditEnding="DevicesGrid_CellEditEnding">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Device" Binding="{Binding Name}" Width="50" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Alias" Binding="{Binding Alias}" Width="70" IsReadOnly="True"/>
                                <DataGridTextColumn Header="On" Binding="{Binding On}" Width="40"/>
                                <DataGridTextColumn Header="Setting" Binding="{Binding Setting}" Width="60"/>
                                <DataGridTextColumn Header="Temp" Binding="{Binding Temperature, StringFormat=F1}" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="3" Height="4" Background="#2D2D30" HorizontalAlignment="Stretch" Cursor="SizeNS"/>

                <!-- Stack Panel -->
                <Border Grid.Row="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Background="#333337" Padding="12,6">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Stack" FontWeight="SemiBold" Foreground="#E0E0E0"/>
                                <TextBlock x:Name="StackCountText" Text=" (0 items)" Foreground="#808080"/>
                            </StackPanel>
                        </Border>

                        <ListBox x:Name="StackList" Grid.Row="1" Background="Transparent" Foreground="#E0E0E0"
                                 BorderThickness="0" Padding="8"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Status: " Foreground="White" Opacity="0.8"/>
                    <TextBlock x:Name="StatusText" Text="Ready" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="PC: " Foreground="White" Opacity="0.8"/>
                    <TextBlock x:Name="PCText" Text="0" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,20,0">
                    <TextBlock Text="Instructions: " Foreground="White" Opacity="0.8"/>
                    <TextBlock x:Name="InstructionCountText" Text="0" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="SP: " Foreground="White" Opacity="0.8"/>
                    <TextBlock x:Name="SPText" Text="0" Foreground="White" FontWeight="SemiBold"/>
                </StackPanel>

                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock x:Name="LoopCountLabel" Text="Loops: " Foreground="White" Opacity="0.8" Visibility="Collapsed"/>
                    <TextBlock x:Name="LoopCountText" Text="0" Foreground="#C586C0" FontWeight="SemiBold" Visibility="Collapsed"/>
                </StackPanel>

                <TextBlock x:Name="ErrorText" Grid.Column="5" Text="" Foreground="#FFB0B0" FontWeight="SemiBold"/>
            </Grid>
        </Border>
    </Grid>
</Window>
