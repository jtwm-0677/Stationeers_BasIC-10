<Window x:Class="BasicToMips.UI.Dialogs.ScriptNameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Script"
        Width="400" Height="160"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="#1E1E1E" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="8">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="Enter Script Name"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#FFFFFF"
                       Margin="0,0,0,12"/>

            <!-- Input -->
            <TextBox Grid.Row="1"
                     x:Name="ScriptNameInput"
                     FontSize="14"
                     Padding="8,6"
                     Background="#2D2D30"
                     Foreground="#FFFFFF"
                     BorderBrush="#3F3F46"
                     BorderThickness="1"
                     CaretBrush="#FFFFFF"
                     Margin="0,0,0,16"
                     KeyDown="ScriptNameInput_KeyDown"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Width="80"
                        Padding="0,6"
                        Background="#3F3F46"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Margin="0,0,8,0"
                        Click="Cancel_Click"/>
                <Button Content="Save"
                        Width="80"
                        Padding="0,6"
                        Background="#007ACC"
                        Foreground="#FFFFFF"
                        BorderThickness="0"
                        Click="Save_Click"
                        IsDefault="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
